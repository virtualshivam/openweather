<!DOCTYPE html>
<html lang="en">
<head>
	{{>headerlinks}}
</head>
<body>

	<!-- Navbar -->

{{>navbar}}
<!-- main header -->

	<div class="container-fluid main_header">
		<div class="row">
			<div class="col-md-10 col-12 mx-auto">
				<div class="main_content">
					<form class="temp_form">
						<input type="text" id='cityName' placeholder="Enter Your City Name" autocomplete="off">
						<input type="submit" value="Search" id="searchbtn">
					</form>
				</div>
				<div class="tempInformation">
					<div class="top_layer">
						<p id="day" class="text-capitalize"></p>
						<p id="today_data" class="text-uppercase"></p>
					</div>
					<div class="main_layer">
						<p id="city_name" class="text-capitalize">Get Output Here</p>
						<div class="middle_layer data_hide" id="data_panel">
							<p><span id="temp">0</span><sup>o</sup>C</p>
							<p id="temp_status"><img src="http://openweathermap.org/img/wn/10d@2x.png"></p>
						</div>
					</div>
				</div>	
			</div>
		</div>
	</div>

<!-- footer -->
{{>footer}}

<script src="js/main.js"></script>

</body>
</html>